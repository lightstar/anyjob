{
    "attachments": [ {
        "title": "
            [% IF job && node %]
                [% job.label || job.type %] ([% node %][% progress && progress.redirect ? ' -> ' _ progress.redirect : '' %])
            [% ELSE %]
                Job Set
            [% END %]
        ",
        "text": "
            [% IF event == 'create' || event == 'createJobSet' %]
                created
            [% ELSIF event == 'progress' || event == 'progressJobSet' %]
                [% progress.state || progress.progress || progress.log.message %]
            [% ELSIF event == 'finish' %]
                [% message %]
            [% ELSIF event == 'finishJobSet' %]
                finished
            [% ELSIF event == 'clean' || event == 'cleanJobSet' %]
                cleaned
            [%  END %]
        ",
        [% IF (event == 'finish' && success) || event == 'finishJobSet' %]
            "color": "good"
        [% ELSIF (event == 'finish' && !success) || event == 'clean' || event == 'cleanJobSet' %]
            "color": "danger"
        [% END %]
    } ]
}
